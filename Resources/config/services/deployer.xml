<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="highco.timeline.spread.deployer.class">Highco\TimelineBundle\Spread\Deployer</parameter>
        <parameter key="highco.timeline.spread.deployer.delivery">immediate</parameter>
    </parameters>

    <services>
        <service id="highco.timeline.spread.deployer" class="%highco.timeline.spread.deployer.class%">
			<argument type="service" id="highco.timeline.spread.manager" />
			<argument type="service" id="highco.timeline_action_manager" />
            <argument type="service" id="highco.timeline.provider" />
            <argument type="service" id="highco.timeline.notification_manager" />
            <call method="setDelivery">
                <argument>%highco.timeline.spread.deployer.delivery%</argument>
            </call>
        </service>
    </services>

</container>
